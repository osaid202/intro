<div id="<%= dom_id recipe %>">
  <p>
    <strong>Name:</strong>
    <%= recipe.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= recipe.description %>
  </p>

  <p>
    <strong>Creator:</strong>
    <%= recipe.creator_id %>
  </p>

  <p>
    <strong>Spice:</strong>
    <%= recipe.spice_id %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= recipe.category_id %>
  </p>

</div>
